{{#>layouts.base}}
  <div class="container mx-auto flex flex-wrap flex-grow flex-col md:flex-row md:flex-nowrap items-start p-5 h-full">
    <div class="flex-none w-64 h-full">
      {{> aside cssClasses='h-full' }}
    </div>
    <div class="flex-grow h-full">
      {{#with (route-root)}}
        <h4 class="font-4xl font-bold leading-tight text-gray-900">{{page.title}}</h4>
      {{/with}}

      <h1 class="font-2xl font-bold leading-tight text-gray-900">{{{metadata.page.title}}}</h1>

      <hr/>

      {{> @partial-block }}
    </div>
  </div>
{{/layouts.base}}